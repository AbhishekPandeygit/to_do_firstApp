@model Category
@{
    ViewData["Title"] = "Create";
}


<form method="post">
    <div class="border p-3 mt-4">

    <div class="row pb-2">
    <h1 class="text-primary">Create Category</h1> <hr />
    </div>

    <div class="mb-3"> <label >Name</label><br />
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span><br /></div>

    <div class="mb-3">
    <label>Display Order</label><br />
    <input asp-for="DisplayOrder" class="form-control" />
    <span asp-validation-for="DisplayOrder" class="text-danger"></span> <br /></div>

    <div class="mb-3"> <label>Date</label><br />
    <input asp-for="CreatedDate" class="form-control" />
    <span asp-validation-for="CreatedDate" class="text-danger"></span> <br /></div>

   
   
    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    <a asp-for="Category" asp-action="Index" class="btn btn-secondary">Back To List</a>

    </div>



</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



